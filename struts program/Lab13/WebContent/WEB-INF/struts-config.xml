<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
<form-beans>
<form-bean  name="loginForm" type="org.apache.struts.action.DynaActionForm">
<form-property name="username" type="java.lang.String"/>
<form-property name="password" type="java.lang.String"/>
</form-bean>
</form-beans>
<action-mappings>
<action path="/changeModule" type="org.apache.struts.actions.SwitchAction"/>
<action path="/LoginSubmit" type="com.jlc.LoginAction" name="loginForm" scope="request" validate="true" input="/index.jsp">
<forward name="success" redirect="true" path="/index.jsp"/>
</action>
</action-mappings>
<message-resources parameter="com.jlc.ApplicationResources"/>
</struts-config>

