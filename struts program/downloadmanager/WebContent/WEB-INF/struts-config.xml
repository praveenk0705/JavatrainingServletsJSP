<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
<form-beans>
<form-bean name="uploadForm"
            type="org.apache.struts.action.DynaActionForm">
            <form-property name="theFile" type="org.apache.struts.upload.FormFile"/>
           </form-bean>
           
<form-bean name="loginForm"
            type="com.jlcindia.struts1.LoginForm"/>
           
<form-bean name="tempForm"
            type="org.apache.struts.action.DynaActionForm">
<form-property name="downloadname" type="java.lang.String"/>
</form-bean>     
</form-beans>
<global-forwards>
 
<forward name="loginl" path="/llist"/>
<forward name="addstudent" path="/index.jsp"/>
</global-forwards>                
    <action-mappings>
       <action
            path="/Upload" name="uploadForm" type="com.jlc.UploadAction" parameter="method"
            input="/uploadhome.jsp">
        <forward name="success" path="/success.jsp"/>
        </action>
            <action
            path="/Download" name="tempForm" type="com.jlcindia.struts1.DownloadAction" parameter="method"
            input="/loginlist.jsp"/>
            <action
            path="/LoginSubmit" name="loginForm" type="com.jlcindia.struts1.LoginAction" 
            scope="session" validate="true" 
            input="/index.jsp">
        <forward name="success" path="/home.jsp"/>
         <forward name="failed" path="/index.jsp"/>
        </action>  
        <action path="/llist"   type="com.jlcindia.struts1.DownloadListAction" scope="session" >
<forward name="success" path="/loginlist.jsp"/>

</action>  
    </action-mappings>
             <message-resources parameter="com.jlcindia.struts1.ApplicationResources"/>
             <plug-in className="org.apache.struts.tiles.TilesPlugin">
             <set-property property="definitions-config" value="/WEB-INF/tiles.xml"/>
             </plug-in>
</struts-config>

